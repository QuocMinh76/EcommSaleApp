@using ECommSale.Models;
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    ViewData["ControllerName"] = ViewContext.RouteData.Values["controller"];
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Category List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i>&nbsp; New Category</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.CategoryName)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.CategoryID" />
                </td>
            </tr>
        }
    </table>
</div>